<!DOCTYPE html>
<html>

<head>
    <%- include ('./partials/head'); %>

<body class="skin-blue fixed sidebar-mini sidebar-collapse">
    <div class="wrapper">
        <%- include ('./partials/header'); %>
        <div class="content-wrapper">
            <div class="containerbg">
                <div class="box box-info">
                    <div id="empRegLoader" class="loaderContainer" style="display:none;">
                        <div class="loader"></div>
                    </div>
                    <div class="box-header with-border">
                        <h3 class="box-title">Employee Registration</h3>
                        <div class="box-tools pull-right">
                            <a type="button" class="btn btn-box-tool dashboard" data-widget="remove"><i
                                    class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <section>
                            <form role="form" id="empform" data-toggle="validator">
                                <div class="containerbg">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label> Select Branch : <span class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-bank"></i>
                                                    </div>
                                                    <select class="form-control select2" id="cmbBranch">
                                                    </select>
                                                </div>
                                                <div class="text-danger" id="error_branch"></div>
                                            </div>
                                        </div> 
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label> First Name : <span class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </div>

                                                    <input type="text" maxlength="50" class="form-control aplhanumspace"
                                                        placeholder="First Name" autofocus id="txt_fname"
                                                        required="required">
                                                </div>
                                                <div class="text-danger" id="error_fname"></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label> Middle Name :</label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </div>
                                                    <input type="text" maxlength="50" class="form-control aplhanumspace"
                                                        placeholder="Middle Name" id="txtMiddleName"
                                                        required="required">
                                                </div>
                                                <div class="text-danger" id="error_mname"></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="control-label">Last Name : <span
                                                        class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </div>

                                                    <input maxlength="50" type="text" required="required"
                                                        class="form-control aplhanumspace" id="txtLName"
                                                        placeholder="Last Name" />

                                                </div>
                                                <div class="text-danger" id="error_lname"></div>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Mobile Number : <span class="text text-danger">*</span></label>

                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" class="form-control number" id="txtmobno"
                                                        maxlength="10" placeholder="Enter mobile number">
                                                </div>
                                                <!-- /.input group -->
                                                <div class="text-danger" id="error_txttelno"></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group ">
                                                <label>Telephone Number : </label>

                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-phone"></i>
                                                    </div>
                                                    <input type="text" class="form-control numberdash" id="txttelno"
                                                        maxlength="14" placeholder="Enter telephone number">
                                                </div>
                                                <!-- /.input group -->
                                                <div class="text-danger" id="error_txttelno2"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="control-label">Email ID : <span
                                                        class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </div>
                                                    <input maxlength="48" type="email" required="required" id="txtemail"
                                                        class="form-control" placeholder="Email ID"
                                                        onkeypress="isEmail()" />
                                                </div>
                                                <div id="error_txtemail" class="text-danger"></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="control-label">Employee Code : <span
                                                        class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </div>
                                                    <input maxlength="8" type="text" required="required" id="txtempCode"
                                                        class="form-control" placeholder="Enter Employee Code" />
                                                </div>
                                                <div id="error_txtempcode" class="text-danger"></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label> Department <span class="text text-danger">*</span></label>
                                                <div class="input-group">
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-user"></i>
                                                    </div>
                                                    <select class="form-control" id="cmbDepartment" style="width: 100%;">
                                                        <option value="development" selected="selected">Development</option>
                                                        <option value="accounts">Accounts</option>
                                                        <option value="sales">Sales</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary nextBtn btn-sm pull-right" disabled id="btn1" type="button">Submit</button>
                                </div>

                                <div class="clearfix"></div>

                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Step wizard javascript-->
    <%- include ('./partials/footer'); %>
    <script src="js/globalVal.js"></script>
    <script src="api/admin/controllers/empReg.js"></script>
    <script src="js/empReg.js"></script>
    <script src="api/admin/controllers/verifyTPIN.js"></script>
</body>

</html>