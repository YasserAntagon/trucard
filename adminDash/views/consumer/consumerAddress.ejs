<%- include ('./partials/head'); %>
<link rel="stylesheet" href="truComponents/bootstrap/dist/css/bootstrap-editable.css">
<link rel="stylesheet" href="css/consumer/addresses.css">
<link rel="stylesheet" href="css/mapInWindow.css">
<link rel="stylesheet" href="css/consumer/cuprofile.css">
<%- include ('./partials/lHeader'); %>
<div class="row">
    <div class="col-lg-12 content">

        <div class="box box-widget box-widgets" >
            <div id="ConsumerAddrLoader" class="loaderContainer" style="display:none;">
                <div class="loader"></div>
            </div>
            <div class="box-header">
                <h3 class="box-title"> <i class="fa fa-list"></i> Contact Address
                </h3>
                <div class="box-tools pull-right">
                    <a id="updateProf" class="hidden" type="button" onclick="updateAddr();"
                        title="update profile information" class="btn btn-box-tool"><i
                            class="fa fa-2x fa-floppy-o"></i></a>
                    <a type="button" id="btnedit" title="edit profile information" class="btn btn-box-tool"><i
                            class="fa fa-2x fa-pencil"></i></a>
                </div>
                <hr>
            </div>
            <div class="box-body">
                <div class="col-lg-6">
                    <div class="box box-widget box-widgets">
                        <!-- Add the bg color to the header using any of the bg-* classes -->
                        <div class="box-body">
                            <h4 class="box-title text text-primary">Billing Address :</h3>
                                <a href="javascript:;" id="txtaddress" class="editable editable-click editable-disabled"
                                    data-type="address" data-pk="1" data-title="Please, fill address"></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="box box-widget box-widgets">
                        <!-- Add the bg color to the header using any of the bg-* classes -->
                        <div class="box-body">
                            <h4 class="box-title text text-primary">Permanent Address :
                            </h4>
                            <a href="javascript:;" id="b_txtaddress" class="editable editable-click editable-disabled"
                                data-type="address" data-pk="1" data-title="Please, fill address"></a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="box box-widget box-widgets hidden">
            <div class="box-header">
                <h3 class="box-title text"> <i class="fa fa-list"></i> Consumer Location
                </h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                </div>
                <hr>
            </div>
            <div class="box-body">


                <div class="col-sm-12">
                    <div id="map"></div>
                    <input type="hidden" id="lat" name="lat">
                    <input type="hidden" id="lng" name="lng">
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('./partials/lfooter'); %>
<script src="js/consumer/addresses.js"></script>
<script src="api/consumerApi/controllers/cosumerAddress.js"></script>
<script src="js/consumer/consumermap.js"></script>
</body>
</html>